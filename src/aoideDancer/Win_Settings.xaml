<Window x:Class="aoideDancer.Win_Settings"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Win_Settings" Height="300" Width="300">
    <Grid x:Name="Overall">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        
        <StackPanel Grid.Column="0">
            <Label Content="Allgemein" Height="30" VerticalContentAlignment="Center" Tag="Panel01" MouseDown="Sidebar_Click"/>
            <Label Content="Verzeichnisse" Height="30" VerticalContentAlignment="Center" Tag="Panel02" MouseDown="Sidebar_Click"/>
        </StackPanel>
        <Grid Grid.Column="1" Tag="Panel01">
            <Label Content="Seite1" HorizontalAlignment="Left" Height="58" Margin="37,114,0,0" VerticalAlignment="Top" Width="52"/>
            
        </Grid>
        <Grid Grid.Column="1" Tag="Panel02">
            <Label Content="Seite2" HorizontalAlignment="Left" Height="58" Margin="33,47,0,0" VerticalAlignment="Top" Width="52"/>
        </Grid>

    </Grid>
</Window>
